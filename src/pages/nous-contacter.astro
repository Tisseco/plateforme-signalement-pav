---
import { actions } from 'astro:actions';
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

const result = Astro.getActionResult(actions.contactUs);
console.log("üöÄ ~ result:", result)
const errors = !result?.data?.success ? result?.data?.errors : {}
---

<Layout>
    <Header/>
    <!-- py-24 sm:py-32 -->
    <div class="isolate bg-white px-6 py-4 lg:px-8">
        <!-- <div class="absolute inset-x-0 top-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]" aria-hidden="true">
            <div class="relative left-1/2 -z-10 aspect-1155/678 w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
        </div> -->
        <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">Nous contacter</h2>
            <p class="mt-2 text-lg/8 text-gray-600">Nous sommes √† votre √©coute, envoyez-nous un message.</p>
        </div>
        <form action={actions.contactUs} method="POST" class="mx-auto mt-16 max-w-xl sm:mt-20">
            <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
                <div>
                    <label for="first-name" class="block text-sm/6 font-semibold text-gray-900">Pr√©nom</label>
                    <div class="mt-2.5">
                        <input
                            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
                            type="text"
                            name="firstName"
                            id="first-name"
                            autocomplete="given-name"
                            aria-invalid={errors?.firstName ? true : false}
                            aria-describedby="error-message-firstname"
                            value={result?.data?.values?.firstName}
                        >
                        {errors?.firstName && <p class="mt-2 text-sm text-red-600" id="email-error" id="error-message-firstname" role="alert">{errors?.firstName}</p>}
                    </div>
                </div>
                <div>
                <label for="last-name" class="block text-sm/6 font-semibold text-gray-900">Nom</label>
                    <div class="mt-2.5">
                        <input
                            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
                            type="text"
                            name="lastName"
                            id="last-name"
                            autocomplete="family-name"
                            aria-invalid={errors?.lastName ? true : false}
                            aria-describedby="error-message-last-name"
                            value={result?.data?.values?.lastName}
                        >
                        {errors?.lastName && <p class="mt-2 text-sm text-red-600" id="email-error" id="error-message-last-name" role="alert">{errors?.lastName}</p>}
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <label for="email" class="block text-sm/6 font-semibold text-gray-900">Email</label>
                    <div class="mt-2.5">
                        <input
                            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
                            type="email"
                            name="email"
                            id="email"
                            autocomplete="email"
                            aria-invalid={errors?.email ? true : false}
                            aria-describedby="error-message-email"
                            value={result?.data?.values?.email}
                        >
                        {errors?.email && <p class="mt-2 text-sm text-red-600" id="email-error" id="error-message-email" role="alert">{errors?.email}</p>}
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <label for="phone-number" class="block text-sm/6 font-semibold text-gray-900">Num√©ro de t√©l√©phone</label>
                    <div class="mt-2.5">
                        <input
                            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
                            type="tel"
                            name="phoneNumber"
                            id="phone-number"
                            autocomplete="tel"
                            placeholder="0643233223"
                            aria-invalid={errors?.phoneNumber ? true : false}
                            aria-describedby="error-message-phone-number"
                            value={result?.data?.values?.phoneNumber}
                        >
                        {errors?.phoneNumber && <p class="mt-2 text-sm text-red-600" id="email-error" id="error-message-phone-number" role="alert">{errors?.phoneNumber}</p>}
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <label for="message" class="block text-sm/6 font-semibold text-gray-900">Message</label>
                    <div class="mt-2.5">
                        <textarea
                            class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
                            name="message"
                            id="message"
                            rows="4"
                            aria-invalid={errors?.message ? true : false}
                            aria-describedby="error-message-message"
                        >{result?.data?.values?.message}</textarea>
                        {errors?.message && <p class="mt-2 text-sm text-red-600" id="email-error" id="error-message-message" role="alert">{errors?.message}</p>}
                    </div>
                </div>
                <div class="flex gap-x-2 sm:col-span-2">
                    <div class="flex h-6 items-center">
                        <div class="group grid size-4 grid-cols-1">
                            <input
                                class="col-start-1 row-start-1 appearance-none rounded-sm border border-gray-300 bg-white checked:border-indigo-600 checked:bg-indigo-600 indeterminate:border-indigo-600 indeterminate:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:checked:bg-gray-100 forced-colors:appearance-auto"
                                type="checkbox"
                                name="agreePolicy"
                                id="checkbox-1-label"
                                aria-invalid={errors?.agreePolicy ? true : false}
                                aria-describedby="error-message-agree-policy"
                                checked={result?.data?.values?.agreePolicy}
                            >
                            <svg class="pointer-events-none col-start-1 row-start-1 size-3.5 self-center justify-self-center stroke-white group-has-disabled:stroke-gray-950/25" viewBox="0 0 14 14" fill="none">
                                <path class="opacity-0 group-has-checked:opacity-100" d="M3 8L6 11L11 3.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                <path class="opacity-0 group-has-indeterminate:opacity-100" d="M3 7H11" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <label class="text-sm/6 text-gray-600 select-none" for="checkbox-1-label">
                            En cochant cette case, vous acceptez notre
                            <a href="politique-de-confidentialit√©" target="_blank" class="font-semibold text-indigo-600">Politique&nbsp;de&nbsp;confidentialit√©</a>.
                        </label>
                        {errors?.agreePolicy && <p class="mt-2 text-sm text-red-600" id="email-error" id="error-message-agree-policy" role="alert">{errors?.agreePolicy}</p>}
                    </div>
                </div>
            </div>
            <div class="mt-10">
                <button type="submit" class="block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Envoyer un message</button>
            </div>
        </form>
    </div>
    <Footer/>
</Layout>
  